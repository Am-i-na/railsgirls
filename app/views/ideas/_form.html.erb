<%= form_for(idea) do |f| %>
  <div class='row'>
    <div class='col-md-12'>
      <% if idea.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(idea.errors.count, "error") %> prohibited this idea from being saved:</h2>

          <ul>
          <% idea.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
    </div>
  </div>

  <div class='row'>
    <div class='col-md-6'>
      <div class="field">
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>
    </div>
    <div class='col-md-6'>
      <div class="field">
        <%= f.label :description %>
        <%= f.text_area :description %>
      </div>
    </div>
  </div>
  <div class='row'>
    <div class='col-md-12'>
      <div class="field">
        <%= f.label :picture %>
        <%= f.file_field :picture %>
      </div>
    </div>
  </div>

  <div class='row'>
    <div class='col-md-12'>
      <div class="actions">
        <%= f.submit %>
      </div>
    </div>
  </div>
<% end %>
