<%= form_for idea, :html => {:class => "form-horizontal center"} do |f| %>
  <div class='row'>
    <div class='col-md-12'>
      <% if idea.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(idea.errors.count, "error") %> prohibited this idea from being saved:</h2>

          <ul>
          <% idea.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :name, class: "col-md-4 control-label" %>
    <div class="col-md-8">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :description, class: "col-md-4 control-label" %>
    <div class="col-md-8">
      <%= f.text_field :description, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :picture, class: "col-md-4 control-label" %>
    <div class="col-md-8">
      <%= f.text_field :picture, class: "form-control" %>
    </div>
  </div>

  <div class='row'>
    <div class='col-md-4'></div>
    <div class='col-md-8'>
      <div class="actions">
        <%= f.submit 'Submit', class: "btn btn-default" %>
      </div>
    </div>
  </div>
<% end %>
